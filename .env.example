# ==========================================
# FRIEND APP - Environment Configuration
# ==========================================
# Copy this file to .env and fill in actual values

# ==========================================
# NODE ENVIRONMENT
# ==========================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL=postgres://frienduser:friendpass123@localhost:5432/friend_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=friend_db
DATABASE_USERNAME=frienduser
DATABASE_PASSWORD=friendpass123

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000

# ==========================================
# REDIS CONFIGURATION
# ==========================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis Settings
REDIS_POOL_MIN=2
REDIS_POOL_MAX=10
REDIS_SOCKET_TIMEOUT=5000

# ==========================================
# JWT AUTHENTICATION
# ==========================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# ==========================================
# PASSWORD HASHING
# ==========================================
BCRYPT_ROUNDS=12

# ==========================================
# SECURITY & CORS
# ==========================================
CORS_ORIGIN=http://localhost:3001,http://localhost:8080,http://localhost:19006
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_ENABLED=true

# ==========================================
# SESSION & COOKIES
# ==========================================
SESSION_SECRET=your_session_secret_key_change_this
SESSION_TIMEOUT=1800
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=lax

# ==========================================
# FILE UPLOADS
# ==========================================
FILE_UPLOAD_MAX_SIZE=52428800
FILE_UPLOAD_PATH=./uploads
FILE_UPLOAD_TEMP_PATH=./uploads/temp
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx
MAX_FILE_SIZE_MB=50

# ==========================================
# EMAIL CONFIGURATION
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@friendapp.com
SMTP_FROM_NAME=Friend App

# Email Verification
EMAIL_VERIFICATION_ENABLED=true
EMAIL_VERIFICATION_TIMEOUT=24h

# ==========================================
# FIREBASE CONFIGURATION
# ==========================================
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_SERVICE_ACCOUNT_KEY=./config/firebase-key.json

# ==========================================
# OPENAI CONFIGURATION
# ==========================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# ==========================================
# SENTRY ERROR TRACKING
# ==========================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# ==========================================
# AWS CONFIGURATION (Optional)
# ==========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE_PATH=./logs
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=10

# ==========================================
# MONITORING
# ==========================================
PROMETHEUS_METRICS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_INTERVAL=60000

# ==========================================
# API DOCUMENTATION
# ==========================================
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs

# ==========================================
# EXTERNAL SERVICES
# ==========================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ==========================================
# FEATURE FLAGS
# ==========================================
FEATURE_AI_SUGGESTIONS=true
FEATURE_DARK_MODE=true
FEATURE_SOCIAL_SHARING=true
FEATURE_PUSH_NOTIFICATIONS=true
FEATURE_EMAIL_NOTIFICATIONS=true

# ==========================================
# MAINTENANCE MODE
# ==========================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=App is under maintenance

# ==========================================
# DATA RETENTION
# ==========================================
SOFT_DELETE_GRACE_PERIOD_DAYS=30
AUTO_DELETE_ENABLED=true
LOG_RETENTION_DAYS=30

# ==========================================
# ANALYTICS
# ==========================================
ANALYTICS_ENABLED=true
ANALYTICS_SAMPLE_RATE=0.1

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================
DEBUG=false
SEED_DATABASE=false
RESET_DATABASE=false
