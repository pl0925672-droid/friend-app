{
  "name": "friend-api",
  "version": "1.0.0",
  "description": "Friend App - Production-grade Mobile Application API Backend",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "node --watch src/server.js",
    "start": "node src/server.js",
    "build": "tsc",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "health": "node -e \"console.log('OK')\"",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "db:migrate": "node src/database/migrations.js",
    "db:seed": "node src/database/seed.js",
    "db:reset": "node src/database/reset.js"
  },
  "keywords": [
    "friend",
    "productivity",
    "chat",
    "notes",
    "social",
    "api"
  ],
  "author": "Friend App Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "sequelize": "^6.35.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "redis": "^4.6.12",
    "jsonwebtoken": "^9.1.2",
    "bcryptjs": "^2.4.3",
    "socket.io": "^4.7.2",
    "joi": "^17.11.0",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "multer": "^1.4.5-lts.1",
    "winston": "^3.11.0",
    "bull": "^4.11.5",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "openai": "^4.24.1",
    "@sentry/node": "^7.80.0",
    "@sentry/integrations": "^7.80.0",
    "nodemailer": "^6.9.7",
    "cron": "^3.1.6",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/jest": "^29.5.11",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "prettier": "^3.1.1",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
